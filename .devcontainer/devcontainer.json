{
  "name": "canvas-lms",
  "dockerComposeFile": [
    "docker-compose.yml",
    "docker-compose.override.yml"
  ],
  "service": "application",
  "workspaceFolder": "/usr/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        "#terminal.integrated.profiles.linux#": "/bin/bash",
        "cSpell.enabled": true,

        // * Optional: Enable Ruby LSP support.
        // * To enable:
        // * 1. Run the following inside '.devcontainer/dev-tools/ruby-lsp/':
        // *    `bundle _${BUNDLER_VERSION}_ config set --local path 'vendor/bundle'`
        // *    `bundle _${BUNDLER_VERSION}_ install`
        // * 2. Uncomment the "editor.defaultFormatter" setting.
        // * 3. Uncomment "Shopify.ruby-lsp" in the "extensions" list below.
        // * 4. Rebuild the devcontainer.

        "rubyLsp.bundleGemfile": "/usr/workspace/.devcontainer/dev-tools/ruby-lsp/Gemfile",
        // "[ruby]": {
        //   "editor.defaultFormatter": "Shopify.ruby-lsp"
        // }
      },
      "extensions": [
        "mikestead.dotenv",
        "streetsidesoftware.code-spell-checker",
        "formulahendry.auto-rename-tag",
        "michelemelluso.code-beautifier",
        "wmaurer.change-case",
        "vivaxy.vscode-conventional-commits",
        "gruntfuggly.todo-tree",

        // * Optional: Enable Ruby LSP VSCode extension.
        // * To enable, see 'Enable Ruby LSP support' above.

        // "Shopify.ruby-lsp"
      ]
    }
  },
  "shutdownAction": "stopCompose"
}
