{{#if isPassFail}}
  {{
    fast-select
    id=input-id
    items=passFailGrades
    value=value
  }}
{{ else }}
  {{
    input
    value=value
    id=input-id
    type="text"
    disabled=isInPastGradingPeriodAndNotAdmin
  }}
{{/if}}
{{outOfText}}

{{#if submission.late}}
  <span class="submission_late_penalty">
    {{#t}}Late Penalty{{/t}} <strong>{{late_penalty}}</strong>
  </span>
  <span class="submission_final_grade">
    {{#t}}Final Grade{{/t}} <strong>{{final_grade}}</strong>
  </span>
{{/if}}

{{#unless isPassFail}}
<div class="checkbox">
  <label class="checkbox">
    {{
      input
      type="checkbox"
      id="submission-excused"
      name="submission-excused"
      checked=excused
      disabled=isInPastGradingPeriodAndNotAdmin
    }}
    {{#t}}Excuse This Assignment for the Selected Student{{/t}}
  </label>
</div>
{{/unless}}
